<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".Movie_Page">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="380dp">

                        <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/homeimage1"
                            android:layout_width="match_parent"
                            android:layout_height="280.1dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/antman"
                            app:riv_corner_radius_bottom_left="14.4dp"
                            app:riv_corner_radius_bottom_right="14.4dp" />

                        <include layout="@layout/toolbar_moviepage" />


                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="19.21dp"
                            android:layout_marginTop="79.81dp"
                            android:layout_marginRight="19.21dp"
                            app:cardCornerRadius="9.7dp"
                            app:cardElevation="2dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="19.2dp">

                                <customfonts.MyTextView_Roboto_Bold
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10.08dp"
                                    android:gravity="center"
                                    android:text="Ant Man and the Wasp"
                                    android:textColor="#212224"
                                    android:textSize="18.5dp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="8dp"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="13dp"
                                        android:layout_height="13dp"
                                        android:layout_marginRight="4.8dp"
                                        android:src="@drawable/star"
                                        android:tint="#868e96" />


                                    <customfonts.MyTextView_Roboto_Bold
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="2dp"
                                        android:text="4.9"
                                        android:textColor="#868e96"
                                        android:textSize="9.5dp" />

                                    <ImageView
                                        android:layout_width="13dp"
                                        android:layout_height="13dp"
                                        android:layout_marginLeft="15dp"
                                        android:layout_marginRight="4.8dp"
                                        android:src="@drawable/clock"
                                        android:tint="#868e96" />


                                    <customfonts.MyTextView_Roboto_Bold
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="2dp"
                                        android:text="111 mins"
                                        android:textColor="#868e96"
                                        android:textSize="9.5dp" />


                                    <ImageView
                                        android:layout_width="13dp"
                                        android:layout_height="13dp"
                                        android:layout_marginLeft="15dp"
                                        android:layout_marginRight="2.8dp"
                                        android:src="@drawable/video"
                                        android:tint="#868e96" />


                                    <customfonts.MyTextView_Roboto_Bold
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="2dp"
                                        android:text="IMAX 3D"
                                        android:textColor="#868e96"
                                        android:textSize="9.5dp" />


                                </LinearLayout>


                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.7dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="#c4c9df" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:orientation="horizontal"
                                    android:padding="4dp">

                                    <customfonts.MyTextView_Roboto_Medium
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Synopsis"
                                        android:textColor="#212224"
                                        android:textSize="13.3dp" />

                                    <customfonts.MyTextView_Roboto_Bold
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginRight="10dp"
                                        android:background="@drawable/gray_fillclr_moviepage_rect"
                                        android:paddingLeft="7dp"
                                        android:paddingTop="3dp"
                                        android:paddingRight="7dp"
                                        android:paddingBottom="3dp"
                                        android:text="Action"
                                        android:textColor="#868e96"
                                        android:textSize="9.6dp" />


                                    <customfonts.MyTextView_Roboto_Bold
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:background="@drawable/gray_fillclr_moviepage_rect"
                                        android:paddingLeft="7dp"
                                        android:paddingTop="3dp"
                                        android:paddingRight="7dp"
                                        android:paddingBottom="3dp"
                                        android:text="Adventure"
                                        android:textColor="#868e96"
                                        android:textSize="9.6dp" />


                                </LinearLayout>


                                <customfonts.MyTextView_Roboto_Regular
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:letterSpacing="0.0625"
                                    android:lineSpacingExtra="7dp"
                                    android:padding="5dp"
                                    android:text="Scott Lang is grappling with the consequences of his\nchoices as both a superhero and a father. Approached by\nHope van Dyne and Dr. Hank Pym, Lang must once again\ndon …"
                                    android:textColor="#868e96"
                                    android:textSize="9sp" />


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="61dp"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginRight="61dp"
                                    android:background="@drawable/gray_fillclr_moviepage_rect"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:padding="2dp">


                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="15dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/arrow_down"
                                        android:tint="#868e96" />


                                </LinearLayout>
                            </LinearLayout>


                        </android.support.v7.widget.CardView>
                    </FrameLayout>

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingLeft="19.2dp"
                    android:paddingBottom="28.8dp" />


                <customfonts.MyTextView_Roboto_Medium
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19.2dp"
                    android:layout_marginBottom="13.103dp"
                    android:text="Sathyam Cinemas: Royapettah"
                    android:textColor="#5c5c5c"
                    android:textSize="12.5sp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerview1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingLeft="19.2dp"
                    android:paddingBottom="28.8dp" />


                <customfonts.MyTextView_Roboto_Medium
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19.2dp"
                    android:layout_marginBottom="13.103dp"
                    android:text="Escape Cinemas"
                    android:textColor="#5c5c5c"
                    android:textSize="12.5sp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerview2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingLeft="19.2dp"
                    android:paddingBottom="28.8dp" />

                <customfonts.MyTextView_Roboto_Medium
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19.2dp"
                    android:layout_marginBottom="13.103dp"
                    android:text="Escape Cinemas"
                    android:textColor="#5c5c5c"
                    android:textSize="12.5sp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerview3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingLeft="19.2dp"
                    android:paddingBottom="28.8dp" />


            </LinearLayout>


        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="right"
        android:orientation="vertical"
        android:paddingRight="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/oval"
            android:gravity="center">

            <ImageView
                android:layout_width="38dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/right_mark" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
